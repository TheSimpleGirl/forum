<% @users.each do %>
  <div class="field">
    <%= label :email %><br />
    <%= text_field :email %>
  </div>
  <div class="field">
    <%= label :password %><br />
    <%= text_field :password %>
  </div>
  <div class="field">
    <%= label :password_confirmation %><br />
    <%= text_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.label :admin %><br />
    <%= f.check_box :admin %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
